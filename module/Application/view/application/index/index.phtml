<h1>Products</h1>
<br />
<!-- Purchased Section -->
<h2>Purchased</h2>
<?php if (!empty($products['purchased'])): ?>
    <ul>
        <?php foreach ($products['purchased'] as $product): ?>
            <li>
                <strong><?= $this->escapeHtml($product->name) ?></strong> - $<?= number_format((float) $product->price, 2) ?><br>
                <p><?= $this->escapeHtml($product->description) ?></p>
                <p>Status: <?= $this->escapeHtml($product->payment_status) ?></p>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <p>No products have been purchased yet.</p>
<?php endif; ?>

<!-- Available to Purchase Section -->
<h2>Available to Purchase</h2>
<?php if (!empty($products['available'])): ?>
    <ul>
        <?php foreach ($products['available'] as $product): ?>
            <li>
                <strong><?= $this->escapeHtml($product->name) ?></strong> - $<?= number_format((float) $product->price, 2) ?><br>
                <p><?= $this->escapeHtml($product->description) ?></p>
                <a href="/application/checkout?id=<?= $product->id ?>">Buy Now</a>
            </li>
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <p>All products have been purchased!</p>
<?php endif; ?>
